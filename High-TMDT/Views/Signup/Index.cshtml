@model High_TMDT.Models.SignUp
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập và đăng kí</title>
    <link rel="stylesheet" href="/css/login.css">
    <title>Đăng nhập và đăng kí</title>
    <meta property="og:title" content="Đăng nhập và đăng kí">
    <meta property="og:image" content="Đăng nhập và đăng kí">
    <meta property="og:description" name="description" content="Mô tả ngắn về nội dung của trang và các dịch vụ hoặc chức năng mà trang cung cấp.">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .a {
            text-decoration: none;
        }

        #title-signup, #title-login {
            text-align: center;
            font-size: 24px; /* Điều chỉnh cỡ chữ theo nhu cầu của bạn */
            margin-bottom: 10px
        }

        input.form-control {
            height: 5%;
        }

    </style>
</head>

<body class="snippet-body">
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="card">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                <li class="nav-item text-center">
                    <a class="nav-link active btl" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Đăng Kí</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <form class="form px-4" asp-action="SignUp" asp-controller="SignUp" method="post" enctype="multipart/form-data">
                        <h1 id="title-signup">Đăng kí</h1>

                        <!-- Personal Information -->
                        <div class="form-group">
                            <input type="text" name="User.ID" class="form-control" placeholder="Mã người dùng" hidden>
                            <input asp-for="User.TenDangNhap" class="form-control" placeholder="Tên đăng nhập">
                            <span asp-validation-for="User.TenDangNhap" class="text-danger"></span>

                            <input asp-for="User.TenDangNhap" class="form-control" placeholder="Tên đăng nhập">
                            <span asp-validation-for="User.TenDangNhap" class="text-danger"></span>
                            <input asp-for="User.MatKhau" type="password" class="form-control" placeholder="Mật khẩu">
                            <span asp-validation-for="User.MatKhau" class="text-danger"></span>
                            <input asp-for="User.MatKhauNhapLai" type="password" class="form-control" placeholder="Nhập lại mật khẩu">
                            <span asp-validation-for="User.MatKhauNhapLai" class="text-danger"></span>
                        </div>

                        <!-- Profile Picture -->
                        <div class="form-group">
                            <label for="filehinh">Chọn ảnh:</label>
                            <input type="file" name="FileName" class="form-control" />
                            <span asp-validation-for="User.Anh" class="text-danger"></span>
                        </div>
                        <!-- Gender -->
                        <div class="form-group">
                            <label for="GioiTinh">Giới tính:</label>
                            <select class="form-control" id="GioiTinh" name="User.GioiTinh">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                            <span asp-validation-for="User.GioiTinh" class="text-danger"></span>

                        </div>
                        <!-- Contact Information -->
                        <div class="form-group">
                            <input asp-for="User.Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                            <input asp-for="User.SoDienThoai" class="form-control" placeholder="Số điện thoại">
                            <span asp-validation-for="User.SoDienThoai" class="text-danger"></span>
                            <input asp-for="UserAddress.DiaChiNha" class="form-control" placeholder="Địa Chỉ Nhà">
                            <span asp-validation-for="UserAddress.DiaChiNha" class="text-danger"></span>
                            <input type="number" name="User.HieuLuc" class="form-control" placeholder="Hiệu lục" hidden>
                            <input type="text" name="UserAddress.PhuongXa" class="form-control" placeholder="Phường / Xã">
                            <input type="text" name="UserAddress.QuanHuyen" class="form-control" placeholder="Quận / Huyện">
                            <input type="text" name="UserAddress.ThanhPhoTinh" class="form-control" placeholder="Thành Phố / Tỉnh">
                            <input type="text" name="UserAddress.QuocGia" class="form-control" placeholder="Quốc Gia">

                        </div>

                        <!-- Submit Button -->
                        <button class="btn btn-dark btn-block">Đăng kí</button>
                    </form>

                </div>


            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>



</body>

</html>
