        /* Style the dropdown button */
        .dropbtn {
            color: white;
            padding: 12px;
            font-size: 16px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        /* Style the dropdown content (hidden by default) */
        .dropdown-content {
            display: none;
            position: absolute;
            left: 0;
            top: 100%; /* Position the dropdown content below the button */
            background-color: white;
            width:100%;
            min-width: 180px;
            text-align:left;
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            z-index: 1;
            border-radius: 5px;
            overflow: hidden;
            opacity: 0; /* Start with 0 opacity */
            transition: opacity 0.3s ease; /* Add transition for opacity */
        }

            /* Style the links inside the dropdown */
            .dropdown-content a {
                color: black;
                padding: 14px 16px;
                text-decoration: none;
                display: block;
                transition: background-color 0.3s, color 0.3s; /* Add transition for background-color and color */
            }

                /* Change color and background on hover */
                .dropdown-content a:hover {
                    background-color: #ddd;
                    color: #333; /* Change color on hover */
                }

        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {
            display: block;
            right: 0; /* Align the right edge of the dropdown with the button */
            left: auto; /* Reset the left property to auto */
            opacity: 1; /* Fade in the dropdown */
        }

        /* Style the dropdown on active state (click) */
        .dropdown:active .dropbtn {
            background-color: #45a049;
        }

        /* Add a subtle shadow to the dropdown content */
        .dropdown-content {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
    </style>
